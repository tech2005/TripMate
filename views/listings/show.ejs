<% layout('layouts/boilerplate') -%>

<div class="row mt-4">
  <div class="col-8 offset-2">

    <!-- Listing Title -->
    <h2 class="mb-3"><%= listing.title %></h2>

    <!-- Listing Image -->
    <div class="card show-card mb-3">
      <img 
        src="<%= listing.image.url %>" 
        class="card-img-top" 
        alt="listing_image"
        style="height: 25rem; object-fit: cover;"
      >
    </div>

    <!-- Listing Details -->
    <div class="card p-3 mb-4 shadow-sm">
      <p class="m-0">
        <strong>Description:</strong> <%= listing.description %><br>
        <strong>Price:</strong> â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night<br>
        <strong>Location:</strong> <%= listing.location %><br>
        <strong>Country:</strong> <%= listing.country %>
      </p>
    </div>

    <!-- Edit + Delete Buttons -->
    <div class="d-flex gap-3 mb-4">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">Edit</a>

      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>

    <!-- Review Form -->
    <hr>
    <h4 class="mt-3">Leave a Review</h4>

    <form action="/listings/<%= listing._id %>/reviews" method="POST" class="mb-4">
      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input 
          type="range" 
          min="1" 
          max="5" 
          id="rating" 
          name="review[rating]" 
          class="form-range"
        >
      </div>

      <div class="mb-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea 
          name="review[comment]" 
          id="comment" 
          rows="4" 
          class="form-control"
        ></textarea>
      </div>

      <button class="btn btn-primary">Submit</button>
    </form>

    <!-- All Reviews Section -->
    <hr>
    <h4 class="mt-4 mb-3">All Reviews</h4>

    <div class="row row-cols-1 row-cols-md-2 g-3">
      <% if (listing.reviews.length === 0) { %>
        <p class="text-muted">No reviews yet. Be the first to review!</p>
      <% } %>

      <% for (let review of listing.reviews) { %>
        <div class="col">
          <div class="card shadow-sm p-3">

            <p>
              <strong>@<%= review.author ? review.author.username : "user" %></strong>
            </p>

            <p><%= review.comment %></p>

            <p><%= review.rating %> stars</p>

            <!-- Delete Review -->
            <form 
              method="POST" 
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            >
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>

          </div>
        </div>
      <% } %>
    </div>

  </div>
</div>
